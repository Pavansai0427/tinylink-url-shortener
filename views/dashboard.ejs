<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>TinyLink Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <header class="bg-blue-600 text-white p-4 text-center">
    <h1 class="text-2xl font-bold">TinyLink</h1>
  </header>
  <main class="container mx-auto p-4 max-w-4xl">
    <h2 class="text-2xl font-semibold mb-6">Dashboard</h2>
    <form class="flex flex-col sm:flex-row items-center mb-6">
      <input type="url" name="url" placeholder="Enter URL" required class="border p-2 mr-2 mb-2 sm:mb-0 flex-1">
      <input type="text" name="code" placeholder="Custom code (optional)" class="border p-2 mr-2 mb-2 sm:mb-0">
      <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white px-4 py-2 rounded">Create Link</button>
    </form>
    <div id="message" class="mb-4"></div>
    <input type="text" id="search" placeholder="Search by code or URL" class="border p-2 mb-4 w-full">
    <div class="overflow-x-auto">
      <table class="w-full table-auto border-collapse border border-gray-300">
        <thead class="bg-gray-200">
          <tr>
            <th class="border p-2">Code</th>
            <th class="border p-2">URL</th>
            <th class="border p-2">Clicks</th>
            <th class="border p-2">Last Clicked</th>
            <th class="border p-2">Actions</th>
          </tr>
        </thead>
        <tbody id="tableBody">
          <% if (links.length === 0) { %>
            <tr><td colspan="5" class="text-center p-4 text-gray-500">No links yet. Create one above!</td></tr>
          <% } else { %>
            <% links.forEach(link => { %>
              <tr>
                <td class="border p-2"><%= link.code %></td>
                <td class="border p-2 truncate max-w-xs" title="<%= link.url %>"><%= link.url %></td>
                <td class="border p-2"><%= link.clicks %></td>
                <td class="border p-2"><%= link.last_clicked ? new Date(link.last_clicked).toLocaleString() : 'Never' %></td>
                <td class="border p-2">
                  <button onclick="navigator.clipboard.writeText('<%= baseUrl %>/<%= link.code %>')" class="bg-gray-500 hover:bg-gray-700 text-white px-2 py-1 mr-2 rounded">Copy</button>
                  <button onclick="deleteLink('<%= link.code %>')" class="bg-red-500 hover:bg-red-700 text-white px-2 py-1 rounded">Delete</button>
                </td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>
    </div>
  </main>
  <footer class="bg-gray-200 p-4 text-center text-sm">Â© 2023 TinyLink</footer>
  <script src="/script.js"></script>
</body>
</html>